{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,               // âœ… prevents TypeScript from writing JS files
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
